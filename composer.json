{
  "name":"metabolism/wordpress-bundle",
  "version": "4.0.1",
  "description": "Wordpress bundle for Symfony 4.0.*",
  "license": "GPL-3.0-or-later",
  "require": {
    "php" : ">=7.1.0",
    "metabolism/wordpress-core-installer": "1.0.*",
    "metabolism/package-actions": "1.0.*",
    "johnpbloch/wordpress-core": "4.9.*",
    "ifsnop/mysqldump-php":"2.*",
    "dflydev/dot-access-data":"2.*",
    "elliotcondon/advanced-custom-fields-pro": "5.*",
    "enshrined/svg-sanitize": "0.*"
  },
  "extra": {
    "post-package-install": {
      "create": {
        "metabolism/wordpress-bundle": {
          "web/uploads": 777,
          "web/wp-bundle/upgrade": 777,
          "web/wp-bundle/languages": 777,
          "config/acf-json": 777
        }
      },
      "copy": {
        "metabolism/wordpress-bundle": {
          "tools/wp-config.php": "web/wp-config.php",
          "doc/wordpress.sample.yml": "config/wordpress.yml",
          "tools/mu-plugin.php": "web/wp-bundle/mu-plugins/wordpress-bundle.php",
          "tools/acf-component-field": "web/wp-bundle/plugins/acf-component-field"
        }
      }
    },
    "branch-alias": {
      "dev-3.4.x": "3.4.x-dev",
      "dev-4.0.x": "4.0.x-dev"
    }
  },
  "autoload" : {
    "psr-4" : {
      "Metabolism\\WordpressBundle\\" : "src/"
    }
  }
}
